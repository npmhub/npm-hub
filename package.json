{
  "private": true,
  "author": "zeke",
  "license": "MIT",
  "scripts": {
    "test": "eslint source --ext .svelte,.js --fix && npm run build",
    "build": "webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "release-amo": "cd distribution && web-ext-submit",
    "release-cws": "cd distribution && webstore upload --auto-publish",
    "release": "npm run build && npm run update-version && npm run release-amo && npm run release-cws",
    "update-version": "VERSION=20$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "webextensions": true
    },
    "plugins": [
      "svelte3",
      "unicorn"
    ],
    "extends": [
      "xo/browser",
      "plugin:unicorn/recommended"
    ],
    "rules": {
      "indent": ["error", 2],
      "import/no-unassigned-import": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 2,
          "maxEOF": 1
        }
      ],
      "no-new": "off",
      "unicorn/better-regex": "off",
      "unicorn/filename-case": "off"
    },
    "overrides": [
      {
        "files": "**/*.svelte",
        "processor": "svelte3/svelte3"
      }
    ]
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "dot-json": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "size-plugin": "^2.0.1",
    "svelte": "^3.18.2",
    "svelte-loader": "^2.13.6",
    "terser-webpack-plugin": "^2.3.5",
    "utc-version": "^2.0.1",
    "web-ext-submit": "^4.1.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "xo": "^0.32.1"
  },
  "dependencies": {
    "doma": "^1.0.3",
    "escape-goat": "^3.0.0",
    "github-injection": "^1.0.1",
    "hosted-git-info": "^3.0.2",
    "p-memoize": "^4.0.0",
    "select-dom": "^6.0.0",
    "webext-domain-permission-toggle": "^1.0.0",
    "webext-dynamic-content-scripts": "^6.0.3"
  }
}
