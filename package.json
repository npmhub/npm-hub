    "webext-dynamic-content-scripts": "^6.0.5"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^6.1.0",
    "dot-json": "^1.2.0",
    "eslint": "^7.8.1",
    "eslint-config-xo-space": "^0.25.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-unicorn": "^21.0.0",
    "npm-run-all": "^4.1.5",
    "size-plugin": "^2.0.1",
